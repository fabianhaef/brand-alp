{% set webp320 = {
	width: 308,
    height: 440,
    mode: 'crop',
    quality: 100,
    format: 'webp'
} %}

{% set jpeg320 = {
	width: 308,
    height: 440,
    mode: 'crop',
    quality: 100,
	format: 'jpeg'
} %}

{% set webp768 = {
    width: 463,
    height: 640,
    mode: 'crop',
    quality: 100,
    format: 'webp'
} %}

{% set jpeg768 = {
    width: 463,
    height: 640,
    mode: 'crop',
    quality: 100,
    format: 'jpeg'
} %}


{% set galleryElements = entry.galleryImages.all() %}

<div class="anchor" id="gallery"></div>

<section class="section">
	<div class="container">
		<div class="row">
			<div class="gr-24">
				<h2 class="section__title">{{entry.galleryTitle}}</h2>
			</div>
		</div>
	</div>
	<div class="imagescroll" data-group="{{ entry.id }}">
		<div class="container">
			<div class="row">
				<div class="gr-24">
					<div class="imagescroll__wrapper">
						<div class="imagescroll__inner">
							{% for img in galleryElements %}
								<div class="imagescroll__item">
									<picture>
										<source media="(min-width: 768px)" srcset="{{ img.url(webp768) }}" data-srcset="{{ img.url(webp768) }}" type="image/webp">
										<source media="(min-width: 768px)" srcset="{{ img.url(jpeg768) }}" data-srcset="{{ img.url(jpeg768) }}" type="image/jpeg">

										<source media="(min-width: 300px)" srcset="{{ img.url(webp320) }}" data-srcset="{{ img.url(webp320) }}" type="image/webp">
										<source media="(min-width: 300px)" srcset="{{ img.url(jpeg320) }}" data-srcset="{{ img.url(jpeg320) }}" type="image/jpeg">

										<img src="{{ img.url(jpeg320) }}" width="{{ img.getWidth(webp320) }}" height="{{ img.getHeight(jpeg320) }}" class="scrollimage-image lazyload" alt="{{ img.alt }}" data-container="imagescroll-{{ loop.index }}" data-content="{{ img.alt }}" data-group="{{ loop.index }}">
									</picture>
									<span class="imagescroll__legend--wrapper">
										<p class="imagescroll__image-legend">Platzhalter um platz u</p>
									</span>
								</div>
							{% endfor %}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
