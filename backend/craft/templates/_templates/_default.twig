{% extends '_layouts/master' %}
{% set bodyClass = 'default' %}

{% block content %}
	{% include '_includes/header' with {mode: 'subsite'} %}

	<main class="main" id="main">
		<div class="section section--only">
			<div class="container">
				<div class="row">
					<div class="gr-24 gr-12@small">
						<h1 class="section__title">{{ entry.title }}</h1>

					</div>
					<div class="gr-24 gr-12@small">
						<div class="section__wysiwyg">
							{{ entry.subsiteText}}
						</div>
					</div>
				</div>
			</div>
		</div>
	</main>

	{% include '_includes/footer' %}
{% endblock %}
